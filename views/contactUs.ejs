    <div class="nav-menu mobile" id="navMenu">
      <a href="/welcome" class="non-style-link nav-item">HOME</a>
      <a href="/contact" class="non-style-link nav-item">CONTACT US</a>
      <a href="/services" class="non-style-link nav-item">SERVICES</a>
    </div>
    <div class="full-height">
      <center>
        <table border="0">
          <div class="shadow-background">
            <main class="contact-us-page">
              <h1>CONTACT US</h1>
              <div class="section">
                <h2>JPK VETERINARY CLINIC</h2>
                <img src="/images/contact_logo.jpg" alt="JPK Veterinary Clinic Logo" width="150" height="150" />
